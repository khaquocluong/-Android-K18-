<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_menu_option"
            android:layout_width="195dp"
            android:layout_height="69dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="168dp"
            android:layout_marginEnd="50dp"
            android:text="Menu Option"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.525"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_linear"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:text="Linear View"
            app:layout_constraintEnd_toEndOf="@+id/tv_menu_option"
            app:layout_constraintStart_toStartOf="@+id/tv_menu_option"
            app:layout_constraintTop_toBottomOf="@+id/tv_menu_option" />

        <Button
            android:id="@+id/btn_gid_view"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:text="Gid View"
            app:layout_constraintEnd_toEndOf="@+id/btn_linear"
            app:layout_constraintStart_toStartOf="@+id/btn_linear"
            app:layout_constraintTop_toBottomOf="@+id/btn_linear" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>